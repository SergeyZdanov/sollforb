@page
@model Frontend.Pages.Shipment.IndexModel
@{
    ViewData["Title"] = "Отгрузки";
}

<h1>@ViewData["Title"]</h1>

<form method="get" class="border p-3 rounded mb-3">
    <div class="row g-3 align-items-end">
        <div class="col-md-2">
            <label class="form-label">Период (с)</label>
            <input type="date" asp-for="StartDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Период (по)</label>
            <input type="date" asp-for="EndDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="FilterClientId" class="form-label">Клиент</label>
            <select asp-for="FilterClientId" asp-items="Model.ClientOptions" class="form-select">
                <option value="">Выберите клиента</option>
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="FilterResourceId" class="form-label">Ресурс</label>
            <select asp-for="FilterResourceId" asp-items="Model.ResourceOptions" class="form-select">
                <option value="">Выберите ресурс</option>
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="FilterUnitId" class="form-label">Единица измерения</label>
            <select asp-for="FilterUnitId" asp-items="Model.UeOptions" class="form-select">
                <option value="">Выберите единицу</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Применить</button>
        </div>
        <div class="col-auto">
            <a class="btn btn-success" asp-page="./Create">Добавить</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Дата</th>
            <th>Клиент</th>
            <th>Статус</th>
            <th style="width: 50%;">Содержимое</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model.Shipments)
        {
            <tr>
                <td>@doc.Number</td>
                <td>@doc.Date.ToShortDateString()</td>
                <td>@doc.ClientName</td>
                <td>
                    @if (doc.Status == "Signed")
                    {
                        <span class="badge bg-success">Подписан</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Черновик</span>
                    }
                </td>
                <td>
                    @if (doc.Resources.Any())
                    {
                        <table class="table table-sm table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ресурс</th>
                                    <th>Ед. изм.</th>
                                    <th>Количество</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var resource in doc.Resources)
                                {
                                    <tr>
                                        <td>@resource.ResourceName</td>
                                        <td>@resource.UnitName</td>
                                        <td>@resource.Quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </td>
                <td>
                    <div class="d-flex flex-column">
                        <a asp-page="./Edit" asp-route-id="@doc.Id" class="btn btn-sm btn-outline-primary mb-1">Ред.</a>
                        <a asp-page="./Delete" asp-route-id="@doc.Id" class="btn btn-sm btn-outline-danger mb-1">Удал.</a>

                        @if (doc.Status == "Draft")
                        {
                            <form method="post" asp-page-handler="Sign" asp-route-id="@doc.Id">
                                <button type="submit" class="btn btn-sm btn-success w-100">Подписать</button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="RevertSign" asp-route-id="@doc.Id">
                                <button type="submit" class="btn btn-sm btn-warning w-100">Отозвать</button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>