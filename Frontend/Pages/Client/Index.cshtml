@page
@model Frontend.Pages.Client.IndexModel
@{
    ViewData["Title"] = "Клиенты";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-page="./Create">Добавить</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Наименование</th>
            <th>Адрес</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Address</td>
                <td>@client.Status</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@client.Id">Редактировать</a> |
                    <a asp-page="./Delete" asp-route-id="@client.Id" class="text-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>