@page "{id:int}"
@model Frontend.Pages.Receipt.DeleteModel
@{
    ViewData["Title"] = "Удаление поступления";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы уверены, что хотите удалить этот документ?</h3>
<div>
    <h4>Поступление №@Model.Receipt.Number от @Model.Receipt.Date.ToShortDateString()</h4>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="Receipt.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>