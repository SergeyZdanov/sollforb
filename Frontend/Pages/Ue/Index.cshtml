@page
@model Frontend.Pages.Ue.IndexModel
@{
    ViewData["Title"] = "Единицы измерения";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-page="./Create">Добавить</a>
    <a class="btn btn-warning" href="#">К архиву</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Наименование</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ue in Model.Ues)
        {
            <tr>
                <td>@ue.Name</td>
                <td>@ue.Status</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@ue.Id">Редактировать</a>
                    <a asp-page="./Delete" asp-route-id="@ue.Id" class="text-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>